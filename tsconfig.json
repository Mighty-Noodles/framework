{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@auth/*": ["./lib/auth/*"],
      "@db/*": ["./lib/db/*"],
      "@email/*": ["./lib/email/*"],
      "@utils/*": ["lib/utils/*"],

      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@testUtils/*": ["./src/testUtils/*"],
    }
  },
  "include": [
    "lib/**/*",
    "src/**/*",
    "scripts/**/*",
  ]
}
