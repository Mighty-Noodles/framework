{
  "moduleNameMapper": {
    "^src/(.*)$": ["<rootDir>/src/$1"],

    "^@auth/(.*)$": ["<rootDir>/lib/auth/$1"],
    "^@db/(.*)$": ["<rootDir>/lib/db/$1"],
    "^@email/(.*)$": ["<rootDir>/lib/email/$1"],
    "^@test/(.*)$": ["<rootDir>/lib/test/$1"],

    "^@controllers/(.*)$": ["<rootDir>/src/controllers/$1"],
    "^@models/(.*)$": ["<rootDir>/src/models/$1"],
    "^@services/(.*)$": ["<rootDir>/src/services/$1"],
    "^@testUtils/(.*)$": ["<rootDir>/src/testUtils/$1"]
  }
}
